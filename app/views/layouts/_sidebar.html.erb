<aside class="ls-sidebar">
  <div data-ls-module="dropdown" class="ls-dropdown ls-user-account">
    <% if current_user %>
      <%= link_to '#', class: 'ls-ico-user' do %>
        <!-- <img src="/locawebstyle/assets/images/locastyle/avatar&#45;example.jpg" alt="" /> -->
        <span class="ls-name"><%= current_user[:name] %></span>
      <% end %>
      <nav class="ls-dropdown-nav ls-user-menu" aria-hidden="true">
        <ul>
          <li><a href="#">Meus dados</a></li>
          <li><%= link_to 'Sair',
            destroy_user_session_path,
            class: "ls-btn-logout",
            role: 'combobox',
