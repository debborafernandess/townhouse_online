<h1 class="ls-title-intro ls-ico-users">
  <%= @users.model_name.human.capitalize %>
  <%= link_to t('add'), new_user_path, class: 'ls-btn-primary' %>
</h1>

<div class="table">
  <table class="table table-hover table-responsive table-sm">
    <thead>
      <th class="ls-ico-user"></th>
      <th><%= User.human_attribute_name(:name).capitalize %></th>
      <th><%= User.human_attribute_name(:email).capitalize %></th>
      <th><%= User.human_attribute_name(:active).capitalize %></th>
      <th></th>
    </thead>
    <tbody>
      <%= render @users %>
    </tbody>
  </table>
</div>

<%= paginate @users %>
